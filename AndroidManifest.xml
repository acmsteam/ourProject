    xmlns:tools="http://schemas.android.com/tools"
    package="com.hfad.electionacms">

    <application
        android:name=".GlobalsActivity"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".LanguageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity"></activity>

        <activity android:name=".OTPActivity"></activity>

        <activity android:name=".HelloWorldActivity"></activity>

        <activity android:name=".AutoFillActivity"
            tools:ignore="DuplicateActivity"></activity>

        <activity android:name=".PasswordActivity"></activity>

        <activity android:name=".CheckLayoutActivity"></activity>

        <activity android:name=".CandidateRegistrationActivity"></activity>

        <activity
            android:name=".CandidateProfileActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".VoterProfileActivity"
            android:label=""
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".CandidatePromisesActivity"
            android:label="@string/title_activity_candidate_prom"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".CandidateProfileInformationActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".AlreadyVotedActivity"></activity>

        <activity android:name=".VotingListActivity" ></activity>

        <activity android:name=".ThanksForVotingActivity" ></activity>

        <activity
            android:name=".StatisticsIPAddressActivity"
            android:label="@string/title_activity_stats"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".RulesIPAddressActivity"
            android:label="@string/title_activity_rules"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".VoterProfileInformationActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />>

        <activity
            android:name=".AboutUsActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".CandidateListActivity" ></activity>

        <activity android:name=".CandidateInformationActivity" ></activity>

    </application>
</manifest>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoterProfileInformationActivity"
    android:orientation="vertical"
    android:background="#fff"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <GridLayout
            android:id="@+id/text_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/voter_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="VOTER INFORMATION"
                android:textSize="24dp"
                android:layout_margin="10dp"/>
        </GridLayout>

        <LinearLayout
            android:id="@+id/image_thing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_grid"
            android:layout_marginTop="50dp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/imageView"
                android:src="@mipmap/ic_launcher"
                android:layout_width="200dp"
                android:layout_centerHorizontal="true"
                android:layout_height="200dp" />

        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/image_thing">

            <TableRow
                android:background="@drawable/white_box"
                android:layout_margin="1sp"
                android:layout_height="30dp"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="NAME" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@drawable/white_box"
                    android:text="" />
            </TableRow>

            <TableRow
                android:background="@drawable/grey_box"
                android:layout_margin="1sp"
                android:layout_height="30dp"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/text_adhar"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="AADHAR NUMBER" />

                <EditText
                    android:id="@+id/adhaarNumber"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@drawable/grey_box"
                    android:text="" />
            </TableRow>

            <TableRow
                android:background="@drawable/white_box"
                android:layout_margin="1sp"
                android:layout_height="30dp"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/text_father_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FATHER/HUSBAND'S NAME" />

                <EditText
                    android:id="@+id/father_name"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@drawable/white_box"
                    android:text="" />
            </TableRow>

            <TableRow
                android:background="@drawable/grey_box"
                android:layout_margin="1sp"
                android:layout_height="30dp"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/text_dob"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="DOB" />

                <EditText
                    android:id="@+id/dob"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@drawable/grey_box"
                    android:text="" />
            </TableRow>
            <TableRow
                android:background="@drawable/white_box"
                android:layout_margin="1sp"
                android:layout_height="30dp"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/text_mobile_no"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="MOBILE NUMBER" />

                <EditText
                    android:id="@+id/Mobile_no"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@drawable/white_box"
                    android:text="" />
            </TableRow>

            <TableRow
                android:background="@drawable/grey_box"
                android:layout_margin="1sp"
                android:layout_height="30dp"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/text_gender"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="GENDER" />

                <EditText
                    android:id="@+id/Gender"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@drawable/grey_box"
                    android:text="" />
            </TableRow>
            <TableRow
                android:background="@drawable/white_box"
                android:layout_margin="1sp"
                android:layout_height="30dp"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/test_house_number"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="HOUSE NUMBER" />

                <EditText
                    android:id="@+id/Hno"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@drawable/white_box"
                    android:text="" />
            </TableRow>

            <TableRow
                android:background="@drawable/grey_box"
                android:layout_margin="1sp"
                android:layout_height="30dp"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/text_street"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="STREET" />

                <EditText
                    android:id="@+id/Street"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@drawable/grey_box"
                    android:text="" />
            </TableRow>

            <TableRow
                android:background="@drawable/white_box"
                android:layout_margin="1sp"
                android:layout_height="30dp"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/tesr_area"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="AREA" />

                <EditText
                    android:id="@+id/Area"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@drawable/white_box"
                    android:text="" />
            </TableRow>

            <TableRow
                android:background="@drawable/grey_box"
                android:layout_margin="1sp"
                android:layout_height="30dp"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/text_district"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <EditText
                    android:id="@+id/District"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@drawable/grey_box"
                    android:text="" />
            </TableRow>
            <TableRow
                android:background="@drawable/white_box"
                android:layout_margin="1sp"
                android:layout_height="30dp"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/text_constituency"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="CONSTITUENCY" />

                <EditText
                    android:id="@+id/Constituency"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@drawable/white_box"
                    android:text="" />
            </TableRow>

            <TableRow
                android:background="@drawable/grey_box"
                android:layout_margin="1sp"
                android:layout_height="30dp"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/text_state"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="STATE" />

                <EditText
                    android:id="@+id/State"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@drawable/grey_box"
                    android:text="" />
            </TableRow>

        </TableLayout>
    </RelativeLayout>

</ScrollView>